<h3>Index page</h3>
 <h3><%= params[:category] %></h3>
 <div class="center">
  <div class="row row-eq-height">
    <% if @posts.count == 0 %>
    <h3>There are no posts in this category yet </h3>
    <% else %>
    <% @posts.each do |post| %>
         <!-- Cards -->
         <!-- Dogs -->
          <div class="col-md-3">
         <div class="card mb-3">
          <% if post.image? %>
           <%= image_tag post.image , class:"card-img-top" %>
          <% end %> 
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>

            <p class="card-text">犬の説明</p>
            <p><%= link_to "詳細を見る", post_path(post),class:"btn btn-primary" %></p>
              <div class="index_icons"> 
                <% if post.likes.size >= 1 %>
                  <span class="fa fa-heart index_like-icon"></span><%= post.likes.size %> 
                <% else %>
                  <span class="fa fa-heart index_like-icon_zero"></span><%= post.likes.size %>
                <% end %>

                <span style="margin-right: 25px;"></span>

               <% if post.comments.size >= 1 %>
                  <span class="fa fa-comments-o index_comments-icon"></span><%= post.comments.size %>  
                <% else %>
                  <span class="fa fa-comments-o index_comments-icon_zero"></span><%= post.comments.size %> 
                <% end %>
            </div>
          </div><!-- end of card body -->

        </div><!-- end of card -->
      </div><!-- end of col-3 -->

    <% end %>
    <% end %>
  </div>
 <p><%= link_to "一覧に戻る", root_path,class:"btn btn-default" %></p>
</div>
